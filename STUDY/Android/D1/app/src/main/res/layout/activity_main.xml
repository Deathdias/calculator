<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    tools:context=".MainActivity"
    android:background="@drawable/main"

>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/text"
        android:gravity="right"
        android:background="@drawable/index"
        android:layout_marginTop="150dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="50dp"
        android:textSize="48sp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/text">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/erase"
                style="@style/style_button"
                android:background="@drawable/button"
                android:text="C">

            </Button>
            <Button
                android:id="@+id/br_r"
                style="@style/style_button"
                android:background="@drawable/button"
                android:text="(">
            </Button>
            <Button
                android:id="@+id/br_l"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text=")">

            </Button>
            <Button
                android:id="@+id/division"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="/">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/seven"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="7">
            </Button>
            <Button
                android:id="@+id/eight"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="8">
            </Button>
            <Button
                android:id="@+id/nine"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="9">
            </Button>
            <Button
                android:id="@+id/multiply"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="*">

            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/four"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="4">

            </Button>
            <Button
                android:id="@+id/five"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="5">

            </Button>
            <Button
                android:id="@+id/six"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="6">
            </Button>
            <Button
                android:id="@+id/minus"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="-">
            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/one"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="1">

            </Button>
            <Button
                android:id="@+id/two"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="2">

            </Button>
            <Button
                android:id="@+id/three"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="3">
            </Button>
            <Button
                android:id="@+id/plus"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="+">
            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/zero"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="0">

            </Button>
            <Button
                android:id="@+id/dot"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text=".">
            </Button>
            <Button
                android:id="@+id/plus_or_minus"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="">
            </Button>
            <Button
                android:id="@+id/equal"
                android:background="@drawable/button"
                style="@style/style_button"
                android:text="=">
            </Button>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>